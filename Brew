package erstes_plugin.testplugin2.Listeners;
import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.inventory.InventoryMoveItemEvent;
import org.bukkit.event.inventory.InventoryType;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

public class Brauen implements Listener {


    @EventHandler(ignoreCancelled = true)
    public void onInventoryMoveItem(InventoryMoveItemEvent event) {

        ItemStack item = event.getItem();
        Inventory from = event.getSource();
        Inventory to = event.getDestination();




        if (item.getType() == Material.NETHER_WART){
            if (from.getType() == InventoryType.PLAYER){
                if (to.getType() == InventoryType.BREWING) {
                    event.setCancelled(true);


                }

            }
        }
    }
} 
